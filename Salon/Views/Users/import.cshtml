@model Salon.Models.UserCSVViewModel

@using (Html.BeginForm("Import", "Users", FormMethod.Post,
                               new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Import</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload one or more files using this form:</p>
                @Html.TextBoxFor(m => m.CSVUpload, new { type = "file" })
                @Html.ValidationMessageFor(m => m.CSVUpload, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}
