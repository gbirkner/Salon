@model IEnumerable<Salon.Models.VisitShortViewModel>

@{
    ViewBag.Title = "_VisitShort";
}
<div id="VisitShort">
    <h2>Besuche</h2>
    <div style="height : 310px; overflow:auto;">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.created)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.customer)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.stylist)
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.created
                </td>
                <td>
                    @item.customer.FName @item.customer.LName
                </td>
                <td>
                    @item.stylist.UserName
                </td>
                <td>
                    <a href="Visits/VisitCreate/@item.visitId">Details</a>
                </td>
            </tr>
        }
    </table>
   </div>
</div>
